<h1>Edit Book</h1>

    <h3>Enter your books information below:</h3>

    <form method="post" action="/books/<%=@book.id%>">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    
    <p><label for="book_title">Title: </label>
    <input type="text" name="title" id="book_title" value="<%=@book.title%>"/></p>

    <p><label for="book_author">Author: </label>
    <input type="text" name="author" id="book_author" value="<%=@book.author%>"/></p>

    <p><label for="book_genre">Genre: </label>
    <input type="text" name="genre" id="book_genre" value="<%=@book.genre%>"/></p>

    <p><label for="book_published">Published: </label>
    <input type="text" name="published_date" id="book_published" value="<%=@book.published_date%>"/></p>

    <p><label for="book_description">Description: </label>
    <textarea type="text" id="book_description" NAME="description"><%=@book.description%>"</textarea></p>

    <p><input type="submit" value="Edit"></p>

    </form>